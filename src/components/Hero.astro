              </div>
              <span class="text-gray-300 text-sm ml-2">Trusted by 200+ businesses</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Visual Elements -->
      <div class="relative animate-fade-in animate-stagger-3">
        <div class="relative z-10">
          <!-- Floating Cards -->
          <div class="bg-white rounded-xl p-6 shadow-2xl transform rotate-3 hover:rotate-6 transition-transform duration-300 mb-6">
            <div class="flex items-center space-x-3 mb-4">
              <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-gray-900 font-semibold">Revenue Growth</h3>
                <p class="text-gray-600 text-sm">Strategic Planning</p>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-2">+127%</div>
            <p class="text-gray-600 text-sm">Average client growth in 12 months</p>
          </div>
          
          <div class="bg-white rounded-xl p-6 shadow-2xl transform -rotate-2 hover:rotate-1 transition-transform duration-300 ml-8">
            <div class="flex items-center space-x-3 mb-4">
              <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-gray-900 font-semibold">Success Rate</h3>
                <p class="text-gray-600 text-sm">Client Satisfaction</p>
              </div>
            </div>
            <div class="text-3xl font-bold text-gray-900 mb-2">98%</div>
            <p class="text-gray-600 text-sm">Projects completed successfully</p>
          </div>
        </div>
        
        <!-- Background Elements -->
        <div class="absolute inset-0 bg-gradient-to-r from-primary-500/20 to-purple-500/20 rounded-3xl transform rotate-6 -z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-l from-blue-500/10 to-primary-500/10 rounded-3xl transform -rotate-3 -z-20"></div>
      </div>
    </div>
  </div>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl"></div>
  </div>
</section>