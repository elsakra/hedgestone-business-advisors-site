---
---

<section id="home" class="relative min-h-screen bg-gradient-to-br from-stone-50 via-amber-50/30 to-rose-50/20 overflow-hidden">
  <!-- Subtle texture overlay -->
  <div class="absolute inset-0 noise-texture"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-20 right-1/4 w-96 h-96 bg-amber-200/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 left-1/4 w-80 h-80 bg-rose-200/20 rounded-full blur-3xl"></div>
  
  <!-- Navigation -->
  <header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
    <nav class="max-w-7xl mx-auto px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <a href="/" class="text-2xl font-black text-stone-900 tracking-tight">
          HedgeStone
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#services" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Services</a>
          <a href="#expertise" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Expertise</a>
          <a href="#team" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Team</a>
          <a href="#results" class="text-stone-700 hover:text-stone-900 font-medium transition-colors">Results</a>
          <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 bg-stone-900 text-white rounded-full font-semibold hover:scale-105 hover:shadow-lg transition-all duration-300">
            Schedule Consultation
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>
  </header>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 pt-32 pb-24 md:pt-40 md:pb-32 lg:pt-48 lg:pb-40">
    <div class="grid lg:grid-cols-12 gap-12 items-center">
      <div class="lg:col-span-7">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black tracking-tight leading-none text-stone-900 mb-8">
          Grow Beyond
          <span class="gradient-text">Limits</span>
        </h1>
        <p class="text-xl md:text-2xl text-stone-700 leading-relaxed mb-12 max-w-2xl">
          Strategic business advisory that transforms ambitious companies into market leaders.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-gradient-to-r from-stone-800 to-stone-900 text-white rounded-full shadow-lg shadow-stone-500/25 hover:shadow-xl hover:shadow-stone-500/30 hover:scale-105 transition-all duration-300">
            Get Started
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold border-2 border-stone-300 text-stone-700 rounded-full hover:border-stone-900 hover:text-stone-900 hover:scale-105 transition-all duration-300">
            Learn More
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
      <div class="lg:col-span-5">
        <div class="relative">
          <img 
            src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&q=80&w=800&h=1000" 
            alt="Business professionals collaborating in modern office"
            class="rounded-2xl shadow-2xl w-full h-auto"
          />
          <div class="absolute -bottom-8 -left-8 bg-white rounded-2xl shadow-xl p-6 max-w-xs">
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-gradient-to-br from-amber-400 to-amber-600 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
              <div>
                <div class="text-3xl font-black text-stone-900">92%</div>
                <div class="text-sm text-stone-600">Average Growth Rate</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>