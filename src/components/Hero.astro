<section class="relative min-h-screen flex items-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="animate-fade-in">
        <div class="text-primary-400 font-medium mb-4 animate-fade-in animate-stagger-1">
          Strategic Business Advisory
        </div>
        <h1 class="text-5xl lg:text-6xl font-bold leading-tight mb-6 animate-fade-in animate-stagger-2">
          Transform Your Business with 
          <span class="text-primary-400">Expert Guidance</span>
        </h1>
        <p class="text-xl text-gray-300 leading-relaxed mb-8 max-w-lg animate-fade-in animate-stagger-3">
          HedgeStone Business Advisors provides strategic consulting services to help companies optimize operations, accelerate growth, and achieve sustainable success in today's competitive marketplace.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 animate-fade-in animate-stagger-4">
          <a href="/contact" class="btn-primary">
            Get Free Consultation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="/services" class="btn-secondary bg-transparent border-gray-600 text-white hover:border-primary-400">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
