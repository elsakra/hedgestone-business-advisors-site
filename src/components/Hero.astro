---

<section class="relative min-h-screen bg-gradient-to-br from-stone-50 via-amber-50/30 to-rose-50/20 overflow-hidden">
  <!-- Warm gradient orbs -->
  <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-amber-400/20 rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-rose-400/15 rounded-full blur-[100px]"></div>
  
  <!-- Navigation -->
  <nav class="relative z-20 px-6 py-6 md:px-12">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-stone-900">
        HedgeStone
      </a>
      <div class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-stone-700 hover:text-stone-900 transition-colors">Services</a>
        <a href="#about" class="text-stone-700 hover:text-stone-900 transition-colors">About</a>
        <a href="#process" class="text-stone-700 hover:text-stone-900 transition-colors">Process</a>
        <a href="#contact" class="text-stone-700 hover:text-stone-900 transition-colors">Contact</a>
      </div>
    </div>
  </nav>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-5xl mx-auto px-6 md:px-12 pt-20 pb-32 text-center">
    <h1 class="text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter text-stone-900 mb-6 animate-fade-up">
      Grow with
      <span class="text-gradient">confidence</span>
    </h1>
    <p class="text-xl md:text-2xl text-stone-700 max-w-2xl mx-auto mb-10 animate-fade-up" style="animation-delay: 0.1s">
      Strategic business advisory that transforms ambitious companies into market leaders.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-up" style="animation-delay: 0.2s">
      <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-gradient-to-r from-amber-600 to-rose-600 text-white rounded-full shadow-lg shadow-amber-500/25 hover:shadow-xl hover:shadow-amber-500/30 hover:scale-105 transition-all duration-300">
        Start Your Growth Journey
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <a href="#services" class="px-8 py-4 text-lg font-semibold text-stone-800 bg-white/80 backdrop-blur-sm rounded-full border border-stone-200 hover:bg-white hover:scale-105 transition-all duration-300">
        Explore Services
      </a>
    </div>
  </div>
  
  <!-- Trust indicators -->
  <div class="absolute bottom-0 left-0 right-0 bg-white/60 backdrop-blur-md border-t border-stone-200/50">
    <div class="max-w-5xl mx-auto px-6 py-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="animate-on-scroll">
          <div class="text-3xl font-bold text-stone-900">15+</div>
          <div class="text-sm text-stone-600">Years Experience</div>
        </div>
        <div class="animate-on-scroll">
          <div class="text-3xl font-bold text-stone-900">200+</div>
          <div class="text-sm text-stone-600">Clients Served</div>
        </div>
        <div class="animate-on-scroll">
          <div class="text-3xl font-bold text-stone-900">$2B+</div>
          <div class="text-sm text-stone-600">Value Created</div>
        </div>
        <div class="animate-on-scroll">
          <div class="text-3xl font-bold text-stone-900">98%</div>
          <div class="text-sm text-stone-600">Client Satisfaction</div>
        </div>
      </div>
    </div>
  </div>
</section>