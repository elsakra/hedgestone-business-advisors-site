---
---

<section id="home" class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-cream to-amber-50/30"></div>
  
  <!-- Subtle grid pattern -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.03)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  
  <!-- Background image -->
  <div class="absolute inset-0 opacity-10">
    <img 
      src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1920&h=1080&fit=crop" 
      alt="Modern office building"
      class="w-full h-full object-cover"
    />
  </div>
  
  <div class="relative z-10 max-w-[1400px] mx-auto px-6 lg:px-12 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left content -->
      <div class="space-y-8">
        <p class="text-sm text-gray-500 tracking-wider uppercase animate-on-scroll">01 — 02 — 03 — 04</p>
        
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter leading-none animate-on-scroll stagger-1">
          GROWTH<br/>
          STARTS HERE
        </h1>
        
        <p class="text-xl lg:text-2xl text-gray-700 leading-relaxed max-w-lg animate-on-scroll stagger-2">
          Strategic business advisory that transforms potential into performance.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 animate-on-scroll stagger-3">
          <a href="#contact" class="inline-flex items-center gap-3 px-8 py-5 text-lg font-semibold bg-black text-white rounded-full hover:scale-105 hover:shadow-xl transition-all duration-300">
            Schedule Consultation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-3 px-8 py-5 text-lg font-semibold bg-white text-black rounded-full border-2 border-gray-200 hover:border-black hover:scale-105 transition-all duration-300">
            Our Services
          </a>
        </div>
      </div>
      
      <!-- Right visual -->
      <div class="relative animate-scale">
        <div class="absolute inset-0 bg-gradient-to-br from-amber-400/20 to-rose-400/20 rounded-3xl blur-3xl"></div>
        <div class="relative bg-white rounded-3xl p-12 shadow-2xl">
          <div class="space-y-8">
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl"></div>
              <div>
                <p class="text-3xl font-black">15+</p>
                <p class="text-gray-600">Years Experience</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-gradient-to-br from-rose-500 to-rose-600 rounded-2xl"></div>
              <div>
                <p class="text-3xl font-black">500+</p>
                <p class="text-gray-600">Clients Served</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl"></div>
              <div>
                <p class="text-3xl font-black">$2B+</p>
                <p class="text-gray-600">Value Created</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>