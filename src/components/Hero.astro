<section id="home" class="relative min-h-screen overflow-hidden" data-hero-pattern="editorial" data-module-key="hero" data-dominant-signal="headline" data-anchorId="home">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-stone-50 via-amber-50/30 to-amber-50/20"></div>
  
  <!-- Subtle texture overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,rgba(201,169,97,0.15),transparent_50%)]" />
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,rgba(201,169,97,0.10),transparent_50%)]" />
  </div>
  
  <!-- Navigation -->
  <nav id="nav" class="relative z-20 px-8 py-6" data-module-key="navigation" data-dominant-signal="headline" data-anchorId="nav">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-2xl font-black tracking-tight text-neutral-900 hover:scale-105 transition-transform duration-200">
        HEDGESTONE
      </a>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-neutral-700 hover:text-amber-600 hover:scale-105 transition-all duration-200 font-medium">Services</a>
        <a href="#credentials" class="text-neutral-700 hover:text-amber-600 hover:scale-105 transition-all duration-200 font-medium">Credentials</a>
        <a href="#contact" class="text-neutral-700 hover:text-amber-600 hover:scale-105 transition-all duration-200 font-medium">Contact</a>
      </div>
      
      <!-- CTA Button -->
      <a href="#contact" class="hidden md:inline-flex items-center gap-2 px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white rounded-full font-semibold tracking-wide uppercase text-sm transition-all duration-200 hover:scale-105 button-glow" data-button-recipe="primary">
        Schedule Consultation
      </a>
    </div>
  </nav>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-8 py-32 md:py-40">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8">
        <div class="space-y-2 animate-on-scroll parallax-element" data-parallax-speed="0.8">
          <p class="text-amber-600 font-semibold tracking-wider uppercase text-sm">01 â€” Institutional Excellence</p>
          <h1 class="text-7xl md:text-8xl font-black tracking-tighter leading-none text-neutral-900">
            Wealth<br/>Refined
          </h1>
        </div>
        
        <p class="text-xl md:text-2xl text-neutral-700 leading-relaxed max-w-lg animate-on-scroll parallax-element" data-delay="100" data-parallax-speed="0.9">
          Sophisticated investment strategies for discerning investors who demand excellence.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 animate-on-scroll parallax-element" data-delay="200" data-parallax-speed="0.95">
          <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white rounded-full font-semibold tracking-wide uppercase text-sm transition-all duration-200 hover:scale-105 button-glow" data-button-recipe="primary">
            Get Started
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 bg-white/80 backdrop-blur-sm hover:bg-white text-neutral-900 rounded-full font-semibold tracking-wide uppercase text-sm transition-all duration-200 hover:scale-105 shadow-lg hover:shadow-xl" data-button-recipe="secondary">
            Learn More
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex items-center gap-8 pt-8 animate-on-scroll" data-delay="300">
          <div>
            <p class="text-3xl font-black text-neutral-900">$2.8B+</p>
            <p class="text-sm text-neutral-600">Assets Under Management</p>
          </div>
          <div class="w-px h-12 bg-neutral-300"></div>
          <div>
            <p class="text-3xl font-black text-neutral-900">15+</p>
            <p class="text-sm text-neutral-600">Years of Excellence</p>
          </div>
        </div>
      </div>
      
      <!-- Right Content - Hero Image -->
      <div class="relative animate-on-scroll parallax-element" data-delay="400" data-parallax-speed="1.1">
        <div class="relative aspect-[16/10] rounded-3xl overflow-hidden shadow-2xl">
          <img 
            src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1200&h=675&fit=crop" 
            alt="Modern glass building reflecting sky" 
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/20 to-transparent"></div>
        </div>
        <!-- Decorative element -->
        <div class="absolute -top-8 -right-8 w-32 h-32 bg-amber-600/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-8 -left-8 w-40 h-40 bg-amber-600/10 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/0 -translate-x-1/0 animate-bounce">
    <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

<style>
  .parallax-element {
    will-change: transform;
  }
</style>

<script>
  // Parallax effect
  const parallaxElements = document.querySelectorAll('.parallax-element');
  
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    
    parallaxElements.forEach(element => {
      const speed = element.dataset.parallaxSpeed || 1;
      const yPos = -(scrolled * speed * 0.1);
      element.style.transform = `translateY(${yPos}px)`;
    });
  });
</script>