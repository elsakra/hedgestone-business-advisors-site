<section id="contact" class="relative py-32 md:py-40 bg-gradient-to-br from-stone-50 via-amber-50/30 to-amber-50/20 overflow-hidden" data-module-key="contact" data-dominant-signal="headline" data-anchorId="contact">
  <!-- Background decoration -->
  <div class="absolute inset-0">
    <div class="absolute top-1/0 left-0 w-96 h-96 bg-amber-600/10 rounded-full blur-[100px] -translate-y-1/0" />
    <div class="absolute top-1/0 right-0 w-96 h-96 bg-amber-600/10 rounded-full blur-[100px] -translate-y-1/0" />
  </div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-8 text-center">
    <div class="animate-on-scroll">
      <p class="text-amber-600 font-semibold tracking-wider uppercase text-sm mb-4">04 â€” Get Started</p>
      <h2 class="text-5xl md:text-7xl font-black tracking-tight text-neutral-900 mb-6">
        Begin Your Journey
      </h2>
      <p class="text-xl md:text-2xl text-neutral-700 mb-12 max-w-2xl mx-auto">
        Schedule a confidential consultation to discuss how we can help you achieve your financial objectives.
      </p>
      
      <!-- Contact Options -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl mx-auto mb-12">
        <div class="bg-white rounded-3xl p-8 shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300" data-card-recipe="primary">
          <div class="w-16 h-16 bg-gradient-to-br from-amber-600 to-amber-700 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-2">Call Us</h3>
          <p class="text-neutral-600 mb-4">Speak directly with our team</p>
          <a href="tel:+1-212-555-0100" class="text-amber-600 font-semibold hover:text-amber-700 transition-colors">
            +1 (212) 555-0100
          </a>
        </div>
        
        <div class="bg-white rounded-3xl p-8 shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300" data-card-recipe="primary">
          <div class="w-16 h-16 bg-gradient-to-br from-amber-600 to-amber-700 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-2">Email Us</h3>
          <p class="text-neutral-600 mb-4">For detailed inquiries</p>
          <a href="mailto:contact@hedgestone.com" class="text-amber-600 font-semibold hover:text-amber-700 transition-colors">
            contact@hedgestone.com
          </a>
        </div>
      </div>
      
      <!-- Primary CTA -->
      <a href="#contact-form" class="inline-flex items-center gap-2 px-12 py-5 bg-amber-600 hover:bg-amber-700 text-white rounded-full font-semibold tracking-wide uppercase text-sm transition-all duration-200 hover:scale-105 button-glow shadow-xl" data-button-recipe="primary">
        Schedule Your Consultation
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      
      <!-- Trust Badge -->
      <div class="mt-12 flex items-center justify-center gap-2 text-sm text-neutral-600">
        <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span>All consultations are confidential and complimentary</span>
      </div>
    </div>
  </div>
</section>