---
const caseStudies = [
  {
    company: "TechCorp Solutions",
    industry: "SaaS",
    challenge: "Stagnant growth and operational inefficiencies",
    result: "147% revenue growth in 18 months",
    metrics: [
      { label: "Revenue Growth", value: "147%" },
      { label: "Cost Reduction", value: "32%" },
      { label: "Team Efficiency", value: "2.3x" }
    ]
  },
  {
    company: "HealthFirst Medical",
    industry: "Healthcare",
    challenge: "Scaling challenges and market expansion",
    result: "Successful expansion to 5 new markets",
    metrics: [
      { label: "Market Expansion", value: "5 States" },
      { label: "Patient Growth", value: "89%" },
      { label: "NPS Score", value: "+42" }
    ]
  },
  {
    company: "Global Manufacturing Inc",
    industry: "Manufacturing",
    challenge: "Supply chain disruption and quality issues",
    result: "Best-in-class operational metrics achieved",
    metrics: [
      { label: "Defect Rate", value: "-78%" },
      { label: "On-Time Delivery", value: "99.2%" },
      { label: "Margin Improvement", value: "+18%" }
    ]
  }
];
---

<section id="results" class="py-24 md:py-32 lg:py-40 bg-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight text-stone-900 mb-6 animate-on-scroll">
        Proven
        <span class="gradient-text">Results</span>
      </h2>
      <p class="text-xl text-stone-600 max-w-3xl mx-auto animate-on-scroll animate-on-scroll-delay-100">
        Real transformations, measurable impact, lasting success.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-8">
      {caseStudies.map((study, index) => (
        <div class="bg-gradient-to-br from-stone-50 to-amber-50/30 rounded-2xl p-8 border border-stone-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 animate-on-scroll animate-on-scroll-delay-{(index + 1) * 100}">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-stone-900">{study.company}</h3>
              <p class="text-sm text-stone-600">{study.industry}</p>
            </div>
          </div>
          
          <div class="mb-6">
            <p class="text-sm text-stone-700 mb-2">
              <span class="font-semibold">Challenge:</span> {study.challenge}
            </p>
            <p class="text-sm text-stone-700">
              <span class="font-semibold">Result:</span> {study.result}
            </p>
          </div>
          
          <div class="space-y-3">
            {study.metrics.map(metric => (
              <div class="flex justify-between items-center">
                <span class="text-sm text-stone-600">{metric.label}</span>
                <span class="text-lg font-bold text-amber-600">{metric.value}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <img 
        src="https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&q=80&w=1200&h=600"
        alt="Team celebrating success"
        class="rounded-2xl shadow-xl w-full h-auto max-w-4xl mx-auto"
      />
    </div>
  </div>
</section>