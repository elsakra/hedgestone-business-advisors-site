---
// Header component
---

<header class="navbar fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">H</span>
          </div>
          <span class="text-xl font-bold text-white">HedgeStone</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class="text-white hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">Home</a>
          <a href="/services" class="text-white hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">Services</a>
          <a href="/about" class="text-white hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">About</a>
          <a href="/insights" class="text-white hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">Insights</a>
          <a href="/contact" class="text-white hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">Contact</a>
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn-primary">
          Get Started
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button text-white hover:text-blue-400 focus:outline-none focus:text-blue-400" aria-label="Toggle menu">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-slate-800 rounded-lg mt-2">
        <a href="/" class="text-white hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">Home</a>
        <a href="/services" class="text-white hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">Services</a>
        <a href="/about" class="text-white hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">About</a>
        <a href="/insights" class="text-white hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">Insights</a>
        <a href="/contact" class="text-white hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">Contact</a>
        <div class="pt-2">
          <a href="/contact" class="btn-primary w-full justify-center">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  .navbar {
    background: rgba(30, 41, 59, 0.9);
    backdrop-filter: blur(10px);
  }
  
  .navbar-scrolled {
    background: rgba(30, 41, 59, 0.95);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>