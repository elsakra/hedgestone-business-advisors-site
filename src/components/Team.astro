---
const team = [
  {
    name: "Michael Harrison",
    role: "Founder & CEO",
    bio: "25+ years transforming businesses across Fortune 500 and emerging growth companies.",
    expertise: ["Strategic Planning", "M&A", "Turnarounds"],
    image: "https://images.unsplash.com/photo-1560250097-0b93528c311a?auto=format&fit=crop&q=80&w=400&h=400"
  },
  {
    name: "Sarah Chen",
    role: "Managing Partner",
    bio: "Former McKinsey partner with deep expertise in operational transformation.",
    expertise: ["Operations", "Digital Transformation", "Analytics"],
    image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?auto=format&fit=crop&q=80&w=400&h=400"
  },
  {
    name: "David Reeves",
    role: "Senior Advisor",
    bio: "CFO experience at multiple unicorns, expert in scaling financial operations.",
    expertise: ["Financial Strategy", "Fundraising", "IPO Readiness"],
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?auto=format&fit=crop&q=80&w=400&h=400"
  },
  {
    name: "Jennifer Walsh",
    role: "Partner",
    bio: "Leadership development expert who has coached 100+ C-suite executives.",
    expertise: ["Executive Coaching", "Culture", "Team Building"],
    image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?auto=format&fit=crop&q=80&w=400&h=400"
  }
];
---

<section id="team" class="py-24 md:py-32 lg:py-40 bg-stone-50">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight text-stone-900 mb-6 animate-on-scroll">
        Meet Your
        <span class="gradient-text">Advisors</span>
      </h2>
      <p class="text-xl text-stone-600 max-w-3xl mx-auto animate-on-scroll animate-on-scroll-delay-100">
        Seasoned executives and industry leaders dedicated to your success.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {team.map((member, index) => (
        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 animate-on-scroll animate-on-scroll-delay-{(index + 1) * 100}">
          <img 
            src={member.image}
            alt={member.name}
            class="w-24 h-24 rounded-full object-cover mb-6"
          />
          <h3 class="text-xl font-bold text-stone-900 mb-1">{member.name}</h3>
          <p class="text-amber-600 font-medium mb-3">{member.role}</p>
          <p class="text-stone-600 text-sm mb-4">{member.bio}</p>
          <div class="space-y-1">
            {member.expertise.map(skill => (
              <span class="inline-block text-xs bg-stone-100 text-stone-700 px-2 py-1 rounded-full mr-1 mb-1">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>