  {
    title: "Strategic Planning",
    description: "Develop comprehensive growth strategies aligned with your vision and market opportunities.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    features: ["Market Analysis", "Growth Roadmaps", "Risk Assessment"]
  },
  {
    title: "Operational Excellence",
    description: "Optimize processes and systems to maximize efficiency and profitability.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
    features: ["Process Optimization", "Cost Reduction", "Quality Systems"]
  },
  {
    title: "Financial Advisory",
    description: "Expert guidance on financial strategy, capital structure, and investment decisions.",
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    features: ["Capital Planning", "M&A Advisory", "Financial Modeling"]
  },
  {
    title: "Leadership Development",
    description: "Build strong leadership teams that drive sustainable growth and innovation.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
    features: ["Executive Coaching", "Team Building", "Succession Planning"]
  }
