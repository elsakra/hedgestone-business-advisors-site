---

<section id="services" class="py-24 md:py-32 lg:py-40 bg-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight text-stone-900 mb-6 animate-on-scroll">
        Services That
        <span class="gradient-text">Transform</span>
      </h2>
      <p class="text-xl text-stone-600 max-w-3xl mx-auto animate-on-scroll animate-on-scroll-delay-100">
        Comprehensive advisory services designed to unlock your company's full potential and accelerate sustainable growth.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      {services.map((service, index) => (
        <div class="group relative bg-stone-50 rounded-2xl p-8 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 animate-on-scroll animate-on-scroll-delay-{(index + 1) * 100}">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-amber-600 to-rose-600 rounded-2xl opacity-0 group-hover:opacity-10 blur transition duration-500"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-stone-900 mb-3">{service.title}</h3>
            <p class="text-stone-600 mb-6">{service.description}</p>
            <div class="flex flex-wrap gap-2">
              {service.features.map(feature => (
                <span class="text-sm bg-white px-3 py-1 rounded-full text-stone-700 border border-stone-200">
                  {feature}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 bg-gradient-to-r from-stone-900 to-stone-800 rounded-3xl p-12 text-white relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1557804506-669a67965ba0?auto=format&fit=crop&q=80&w=2000&h=800')] opacity-10 bg-cover bg-center"></div>
      <div class="relative z-10 text-center">
        <h3 class="text-3xl font-bold mb-4">Ready to Transform Your Business?</h3>
        <p class="text-xl text-stone-300 mb-8 max-w-2xl mx-auto">
          Join 200+ companies that have accelerated their growth with HedgeStone.
        </p>
        <a href="#contact" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-stone-900 rounded-full font-semibold hover:scale-105 hover:shadow-lg transition-all duration-300">
          Schedule Your Consultation
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>