---
const industries = [
  { name: "Technology", percentage: 85 },
  { name: "Healthcare", percentage: 75 },
  { name: "Financial Services", percentage: 90 },
  { name: "Manufacturing", percentage: 70 },
  { name: "Retail & Consumer", percentage: 80 },
  { name: "Energy & Resources", percentage: 65 }
];
---

<section id="expertise" class="py-20 lg:py-32 bg-gradient-to-br from-slate-900 to-slate-800 text-white overflow-hidden">
  <div class="relative">
    <!-- Background texture -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
    
    <!-- Background image -->
    <div class="absolute inset-0 opacity-5">
      <img 
        src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=1920&h=1080&fit=crop" 
        alt="Abstract technology background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Gradient orbs -->
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-amber-500/10 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-rose-500/10 rounded-full blur-[100px]"></div>
    
    <div class="relative z-10 max-w-[1400px] mx-auto px-6 lg:px-12">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <p class="text-sm text-gray-400 tracking-wider uppercase animate-on-scroll">Industry Expertise</p>
          <h2 class="text-5xl lg:text-6xl font-bold tracking-tight animate-on-scroll stagger-1">
            DEEP SECTOR<br/>KNOWLEDGE
          </h2>
          <p class="text-xl text-gray-300 leading-relaxed animate-on-scroll stagger-2">
            Our team brings decades of experience across key industries, delivering insights that drive real results.
          </p>
          
          <div class="grid grid-cols-2 gap-8 pt-8">
            <div class="animate-on-scroll stagger-3">
              <p class="text-4xl font-black text-amber-400">25+</p>
              <p class="text-gray-400">Industry Experts</p>
            </div>
            <div class="animate-on-scroll stagger-4">
              <p class="text-4xl font-black text-rose-400">6</p>
              <p class="text-gray-400">Core Sectors</p>
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          {industries.map((industry, index) => (
            <div class="animate-on-scroll stagger-child">
              <div class="flex justify-between items-center mb-2">
                <span class="font-medium">{industry.name}</span>
                <span class="text-sm text-gray-400">{industry.percentage}%</span>
              </div>
              <div class="h-3 bg-white/10 rounded-full overflow-hidden">
                <div 
                  class="h-full bg-gradient-to-r from-amber-400 to-rose-400 rounded-full transition-all duration-1000 ease-out"
                  style={`width: ${industry.percentage}%; transform: scaleX(0); animation: scaleIn 1s ease-out ${index * 100}ms forwards;`}
                ></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scaleIn {
    to {
      transform: scaleX(1);
    }
  }
</style>