<section id="credentials" class="relative py-32 md:py-40 bg-neutral-900 overflow-hidden" data-module-key="credentials" data-dominant-signal="stat" data-anchorId="credentials">
  <!-- Background texture -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/5 w-[500px] h-[500px] bg-amber-600/10 rounded-full blur-[120px]" />
    <div class="absolute bottom-0 right-1/5 w-[400px] h-[400px] bg-amber-600/5 rounded-full blur-[100px]" />
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-8">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <p class="text-amber-600 font-semibold tracking-wider uppercase text-sm mb-4">03 â€” Why HedgeStone</p>
      <h2 class="text-5xl md:text-6xl font-bold tracking-tight text-white mb-6" data-section-header-recipe="primary">
        Proven Excellence
      </h2>
      <p class="text-xl text-neutral-300 max-w-3xl mx-auto">
        A track record of exceptional performance and unwavering commitment to our clients' success
      </p>
    </div>
    
    <!-- Credentials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      <!-- Credential 1 -->
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-3xl p-8 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll" data-card-recipe="primary" data-delay="0">
        <div class="text-center">
          <p class="text-5xl font-black text-amber-600 mb-4" data-stat-recipe="primary">Top 1%</p>
          <h3 class="text-xl font-bold text-white mb-2">Performance Ranking</h3>
          <p class="text-neutral-400">Consistently ranked among the top wealth managers nationally</p>
        </div>
      </div>
      
      <!-- Credential 2 -->
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-3xl p-8 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll" data-card-recipe="primary" data-delay="100">
        <div class="text-center">
          <p class="text-5xl font-black text-amber-600 mb-4" data-stat-recipe="primary">24.8%</p>
          <h3 class="text-xl font-bold text-white mb-2">Average Annual Returns</h3>
          <p class="text-neutral-400">Outperforming market indices through all economic cycles</p>
        </div>
      </div>
      
      <!-- Credential 3 -->
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-3xl p-8 hover:bg-white/10 hover:border-white/20 transition-all duration-300 animate-on-scroll" data-card-recipe="primary" data-delay="200">
        <div class="text-center">
          <p class="text-5xl font-black text-amber-600 mb-4" data-stat-recipe="primary">$10M+</p>
          <h3 class="text-xl font-bold text-white mb-2">Minimum Investment</h3>
          <p class="text-neutral-400">Serving ultra-high-net-worth individuals and families</p>
        </div>
      </div>
    </div>
    
    <!-- Team Section -->
    <div class="animate-on-scroll">
      <h3 class="text-3xl font-bold text-white text-center mb-12">Leadership Team</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Team Member 1 -->
        <div class="text-center">
          <div class="relative mb-6 mx-auto w-48 h-48 rounded-full overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1560250097-0b93528c311a?w=400&h=400&fit=crop" 
              alt="Professional headshot of executive in suit"
              class="w-full h-full object-cover"
            />
          </div>
          <h4 class="text-xl font-bold text-white mb-1">Michael Chen</h4>
          <p class="text-amber-600 font-medium mb-2">Chief Investment Officer</p>
          <p class="text-neutral-400 text-sm">Former Goldman Sachs MD with 25+ years experience</p>
        </div>
        
        <!-- Team Member 2 -->
        <div class="text-center">
          <div class="relative mb-6 mx-auto w-48 h-48 rounded-full overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=400&h=400&fit=crop" 
              alt="Professional woman in business attire"
              class="w-full h-full object-cover"
            />
          </div>
          <h4 class="text-xl font-bold text-white mb-1">Sarah Williams</h4>
          <p class="text-amber-600 font-medium mb-2">Managing Partner</p>
          <p class="text-neutral-400 text-sm">Yale MBA, specialized in alternative investments</p>
        </div>
        
        <!-- Team Member 3 -->
        <div class="text-center">
          <div class="relative mb-6 mx-auto w-48 h-48 rounded-full overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?w=400&h=400&fit=crop" 
              alt="Professional man in formal business wear"
              class="w-full h-full object-cover"
            />
          </div>
          <h4 class="text-xl font-bold text-white mb-1">David Thompson</h4>
          <p class="text-amber-600 font-medium mb-2">Head of Risk Management</p>
          <p class="text-neutral-400 text-sm">CFA, FRM with expertise in quantitative strategies</p>
        </div>
      </div>
    </div>
  </div>
</section>